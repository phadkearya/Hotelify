<% layout('layouts/boilerplate')%>

<div class="row">
    <h1 class="text-center">Edit Hotel</h1>
    <form action="/hotels/<%= hotel._id %>?_method=PUT" method="post" novalidate class="validated-form" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label temp" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="hotel[title]" value="<%=hotel.title%>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label temp" for="location">Location</label>
            <input class="form-control" type="text" id="location" name="hotel[location]" value="<%=hotel.location%>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label temp" for="image">Add Images</label>
            <input type="file" class="temp" name="image" id="image" multiple>
        </div>
        <div class="mb-3">
            <label class="form-label temp" for="price">Pricing</label>
            <div class="input-group">
                <span class="input-group-text" id="price">Rs </span>
                <input type="text" class="form-control" id="price" name="hotel[price]" placeholder="0.00" value="<%=hotel.price%>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label temp" for="description">Description</label>
            <textarea class="form-control" type="text" id="description" name="hotel[description]" required><%=hotel.description%></textarea>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <% hotel.images.forEach(function(img,i) { %>
                <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <label for="image-<%=i%>">Delete?</label>
            <% }); %>
        </div>
        <div mb-3>
            <button class="btn btn-info">Update hotel</button>
            <button class="btn btn-primary"><a class="temp" href="/hotels/<%= hotel._id %>">Back to hotel</a></button>
        </div>
       
    </form>
    <!-- <a href="/hotels/<%= hotel._id %>">Back to hotel</a> -->
    
</div>